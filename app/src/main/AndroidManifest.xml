<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.call.log.infinity">

    <application
        android:name="com.call.log.infinity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.call.log.infinity.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.call.log.infinity.activity.CallLogDetailActivity"
            android:label="@string/title_activity_call_log_detail_info"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

    <!--读取通话记录-->
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <!--拨打电话-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!--发送短信-->
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <!--存储读写-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>